<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    tools:context="com.example.kavin_000.senior_design.Manhattan_Main_Page"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffb80b"
    android:id="@+id/relativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Translator"
        android:id="@+id/button4"
        android:textColor="#ffffffff"
        android:background="#ff3566ff"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/button5"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency"
        android:id="@+id/button5"
        android:textColor="#ffffffff"
        android:background="#ff3566ff"
        android:clickable="true"
        android:singleLine="false"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/button4"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/nyit_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Manhattan and Old Westbury"
        android:id="@+id/Local Restaurants"
        android:typeface="normal"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:textColor="#ff000000" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City Info"
        android:id="@+id/button6"
        android:textColor="#ffffffff"
        android:longClickable="false"
        android:background="#ff3566ff"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/button5"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="International Student Help"
        android:id="@+id/textView"
        android:typeface="normal"
        android:layout_below="@+id/Local Restaurants"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:textColor="#ff000000" />

</RelativeLayout>