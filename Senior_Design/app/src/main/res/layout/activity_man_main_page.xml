<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kavin_000.senior_design.Manhattan_Main_Page"
    android:background="#ffffb80b">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/nyit_logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Manhattan Campus"
        android:id="@+id/textView3"
        android:layout_marginTop="29dp"
        android:typeface="normal"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Local Restaurants"
        android:id="@+id/button4"
        android:textColor="#ffffffff"
        android:background="#ff3566ff"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points of Interest"
        android:id="@+id/button5"
        android:textColor="#ffffffff"
        android:background="#ff3566ff"
        android:clickable="true"
        android:singleLine="false"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Emergency Information"
        android:id="@+id/button6"
        android:textColor="#ffffffff"
        android:longClickable="false"
        android:background="#ff3566ff"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
